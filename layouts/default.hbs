<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>{{ title }}</title>
    <style>
      html, body {
        margin: 0;
        padding: 3% ;
        font-family: 'Lato';
        font-weight: 500;
        font-size: 12px;
        background: rgb(255, 255, 255);
        -webkit-print-color-adjust: exact;
        box-sizing: border-box;
      }

      .page {
        position: relative;
        height: 90mm;
        width: 50mm;
        display: block;
        background: white;
        page-break-after: always;
        margin: 10px;
        overflow: hidden;
      }

      @media print {
        body {
          background: white;
        }

        .page {
          margin: 0;
          height: 100%;
          width: 100%;
        }
      }

      .page.first {
        border-left: 5px solid green;
      }

      .bottom {
        position: absolute;
        left: 5mm;
        right: 5mm;
        bottom: 5mm;
      }

      .group {
        margin-top: 3mm;
      }

      .line {
        color: white;
        position: relative;
      }

      .center {
        text-align: center;
      }

      .logo {
        position: relative;
        width: 80%;
        left: 10%;
        top: 15%;
      }

    </style>
    <meta name="description" content="{{ description }}" />
</head>
<body>
    <div class="page">
        <h1 class="center">{{{ title }}}</h1>
    </div>

    {{#each collections.chapters }}
        
    <div class="chapter-divider">
        <div class="page group">
        {{{contents}}}
		
        </div>

    </div>
		
    {{/each}}
</body>
</html>
